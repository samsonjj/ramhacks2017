<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.SwifeyRamHacks.HomeActivity">

    <TextView
        android:id="@+id/UserLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4.15"
        android:text="Home Page"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="135dp" />

    <Button
        android:id="@+id/buttonCurrentLocation"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Current Location"
        android:layout_gravity="center_horizontal"

        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/buttonFoodCamera"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Food Camera"
        android:layout_gravity="center_horizontal"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:layout_margin="10dp"
        android:id="@+id/buttonReceiptCamera"
        android:text="Receipt Camera"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="135dp"
        tools:layout_editor_absoluteX="117dp" />

    <Button
        android:layout_margin="10dp"
        android:id="@+id/buttonTransactions"
        android:text="Transactions"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="269dp"
        tools:layout_editor_absoluteX="117dp" />

    <Button
        android:layout_margin="10dp"
        android:id="@+id/buttonSettings"
        android:text="Settings"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="336dp"
        tools:layout_editor_absoluteX="117dp" />

    <Button
        android:layout_margin="10dp"
        android:id="@+id/buttonLogOut"
        android:text="Log Out"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="397dp"
        tools:layout_editor_absoluteX="117dp" />

</LinearLayout>
